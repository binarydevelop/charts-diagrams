{
    "scopeName": "text.html.markdown.mermaid",
    "name": "Markdown Mermaid",
    "patterns": [
        {
            "begin": "^```mermaid\\s*$",
            "beginCaptures": {
                "0": { "name": "punctuation.definition.fence.markdown" }
            },
            "end": "^```$",
            "endCaptures": {
                "0": { "name": "punctuation.definition.fence.markdown" }
            },
            "contentName": "source.mermaid",
            "patterns": [
                { "include": "source.mermaid" }
            ]
        }
    ]
}
